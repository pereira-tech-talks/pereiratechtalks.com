---
import Layout from '~/layouts/PereiraTechDayLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';

import Image from '~/components/common/Image.astro';

const PereiraTechDayLogo = '~/assets/images/logos/logo-ptd-color';
const PereiraTechDayLogoDark = '~/assets/images/logos/logo-ptd-blanco.svg';

const PereiraTechDaySlogan = '~/assets/images/logos/slogan-ptd-color';
const PereiraTechDaySloganDark = '~/assets/images/logos/slogan-ptd-blanco.svg';

const metadata = {
  title:
    'Pereira Tech Day — El evento de tecnología mas esperado en pereira.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero background="index-background-ptd">
    <Fragment slot="title" class="text-center">
      <Image src={PereiraTechDayLogo} alt="Pereira Tech Day Logo" width={200} class="mx-auto hidden dark:block" />
      <Image src={PereiraTechDaySlogan} alt="Pereira Tech Day Slogan" width={200} class="mx-auto hidden dark:block" />
      <Image src={PereiraTechDayLogoDark} alt="Pereira Tech Day Logo Dark Theme" width={200} class="mx-auto mb-5 dark:hidden" />
      <Image src={PereiraTechDaySloganDark} alt="Pereira Tech Day Slogan Dark Theme" width={200} class="mx-auto  dark:hidden" />
    </Fragment>
  </Hero>

  <!-- HighlightedPosts Widget ******* -->
  <Features title='Lo que debes saber.' items={[{title : "1", description : "2"}, {title : "1", description : "2"}, {title : "1", description : "2"},{title : "1", description : "2"}]}/>
</Layout>
